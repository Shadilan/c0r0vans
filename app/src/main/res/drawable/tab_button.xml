<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_enabled="false">
            <shape>
                <solid
                    android:color="#e1e1e1"/>
                <stroke
                    android:width="1dp"
                    android:color="#000000"
                     />
                <corners
                    android:topLeftRadius="1dp"
                    android:topRightRadius="1dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            </shape>
        </item>
        <item
            android:state_pressed="true"
            android:state_enabled="true"
            >
            <shape>
                <solid
                    android:color="#7b7b7b" />
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
                <corners
                    android:topLeftRadius="1dp"
                    android:topRightRadius="1dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            </shape>
            </item>
    <item

        android:state_checked="true"
        android:state_enabled="true"
        >
        <shape>
            <solid
                android:color="#7b7b7b" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:topLeftRadius="1dp"
                android:topRightRadius="1dp"/>
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />

        </shape>
    </item>
        <item
            android:state_focused="true"
            android:state_enabled="true">
            <shape>
                <solid
                    android:color="#bebebe" />
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
                <corners
                    android:topLeftRadius="1dp"
                    android:topRightRadius="1dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            </shape>
            </item>

        <item
            android:state_enabled="true">
            <shape>
                <solid
                    android:color="#bebebe" />
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
                <corners
                    android:topLeftRadius="1dp"
                    android:topRightRadius="1dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            </shape>
            </item>
</selector>