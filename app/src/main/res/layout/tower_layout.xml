<?xml version="1.0" encoding="utf-8"?>
<utility.SwipeDetectLayout.SwipeDetectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true"
    >
    <ImageButton
        android:id="@+id/closeActionButton"
        style="@style/CommonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:src="@mipmap/closebutton" />
    <TextView
        android:id="@+id/owner"
        style="@style/LargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/level"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/owner" />
    <HorizontalScrollView
        android:id="@+id/pageChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/toggleDesc"
            style="@style/TabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/information"
            android:textOff="@string/information"
            android:textOn="@string/information" />

        <ToggleButton
            android:id="@+id/toggleWare"
            style="@style/TabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/warehouse"
            android:textOff="@string/warehouse"
            android:textOn="@string/warehouse"
            android:visibility="invisible"
        />
    </LinearLayout>
    </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/swapPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pageChoose"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/descriptionPanel"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:visibility="visible">
                <TextView
                    android:id="@+id/description"
                    style="@style/SmallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/setDescription"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:inputType="none"
                    android:maxLength="256"
                    android:padding="0dp"
                    />
                <ImageButton
                    android:id="@+id/setDescription"
                    style="@style/CommonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/table"
                    />
                <ImageButton
                    android:id="@+id/destroyTower"
                    style="@style/CommonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/setDescription"
                    android:layout_toStartOf="@id/setDescription"
                    android:src="@mipmap/destroy_tower" />

                <ImageButton
                    android:id="@+id/upgdadeTower"
                    style="@style/CommonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/setDescription"
                    android:layout_toRightOf="@id/setDescription"
                    android:src="@mipmap/upgrade_tower" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/warehouse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/obsidianPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/put_take"
                        style="@style/CommonButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                        android:layout_marginRight="3dp"
                            android:layout_marginTop="0dp"
                        android:src="@mipmap/obsidian"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/obsidian_count"
                            style="@style/SmallText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/count_minus"
                            android:layout_alignStart="@+id/count_minus"
                            android:layout_alignTop="@+id/put_take"
                            android:layout_toLeftOf="@+id/put_take"
                            android:layout_toStartOf="@+id/put_take"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/put_obsidian"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/count_minus"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/obsidian_count"
                            android:text="@string/minus" />

                        <SeekBar
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/put_take"
                            android:layout_below="@+id/obsidian_count"
                            android:layout_toEndOf="@+id/count_minus"
                            android:layout_toLeftOf="@+id/count_plus"
                            android:layout_toRightOf="@+id/count_minus"
                            android:layout_toStartOf="@+id/count_plus"
                            android:indeterminate="false" />

                        <Button
                            android:id="@+id/count_plus"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/count"
                            android:layout_toLeftOf="@+id/put_take"
                            android:layout_toStartOf="@+id/put_take"
                            android:text="@string/plus" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>




    <TextView
        android:id="@+id/distance"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</utility.SwipeDetectLayout.SwipeDetectLayout>