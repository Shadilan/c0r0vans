<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        style="@style/CommonProgressBar"
        android:background="@drawable/exp_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expProgress"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:progress="50"
        android:max="100"
        android:maxHeight="7dp"
        android:minHeight="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:src="@mipmap/n_server_connect"
        android:id="@+id/server_connect"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:minWidth="20dp"
        android:maxWidth="20dp"
        android:visibility="invisible"
        android:layout_below="@+id/settings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:src="@mipmap/info"
        android:id="@+id/infoview"
        android:padding="10dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:padding="10dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/setings"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QueueCnt"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignRight="@+id/settings"
        android:layout_alignEnd="@+id/settings"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:background="@color/backOp1"
        android:layout_below="@+id/expProgress"
        android:layout_centerHorizontal="true">
        <TableRow>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:id="@+id/textView5"
        android:textColor="#000000" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelAmount"
        android:textColor="#000000"
/>

        </TableRow>
    <TableRow>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gold"
        android:id="@+id/textView3"
        android:textColor="#000000"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goldAmount"
        android:textColor="#000000"
        />
    </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ambushes"
                android:id="@+id/textView4"
                android:textColor="#000000"

                android:shadowRadius="20"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ambush"
                android:textColor="#000000"
                />
        </TableRow>
        <TableRow>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hirelings"
        android:id="@+id/hirelingTitle"
        android:textColor="#000000"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hirelingsAmount"
        android:textColor="#000000"
        />
        </TableRow>
        <TableRow>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/асities"
        android:id="@+id/foundedTitle"
        android:textColor="#000000"
        android:visibility="gone"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foundedAmount"
        android:textColor="#000000"
        android:visibility="gone"
        />
        </TableRow>

    </TableLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:padding="10dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/zoomButton"
        android:src="@mipmap/zoombutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ZoomCnt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/QueueCnt"
        android:layout_alignEnd="@+id/QueueCnt" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showPosButton"
        android:layout_below="@id/info"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:src="@mipmap/closebutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:padding="10dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/mailButton"
        android:src="@mipmap/mail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mailCnt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/mailButton"
        android:layout_alignEnd="@+id/mailButton" />

    <com.coe.c0r0vans.UIElements.MessageLayout.EssageLine
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/zoomButton"
        android:layout_toRightOf="@id/zoomButton"
        android:layout_toEndOf="@id/mailButton"
        android:layout_toLeftOf="@id/mailButton"
        android:background="@color/backOp1"
        android:id="@+id/essage"
        android:visibility="invisible"
        />





</RelativeLayout>