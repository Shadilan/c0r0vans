<?xml version="1.0" encoding="utf-8"?>
<utility.SwipeDetectLayout.SwipeDetectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/layouts"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:clickable="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/back_button"
        style="@style/TabButton"
        android:minWidth="5dp" />
    <HorizontalScrollView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/Tabs"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button"
        android:layout_toLeftOf="@+id/clear_button"
        android:layout_toStartOf="@id/clear_button">

        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TabsG"
            android:rowCount="1"
            android:columnCount="5">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System"
                android:id="@+id/toggleSystem"
                android:textOff="System"
                android:textOn="System"
                style="@style/TabButton"
                android:checked="true" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:id="@+id/toggleAlert"
                style="@style/TabButton"
                android:textOff="Alert"
                android:textOn="Alert" />
        </GridLayout>
    </HorizontalScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear_button"
        style="@style/TabButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="5dp" />
    <ListView
        android:id="@+id/listSystem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Tabs"
        android:weightSum="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
    <ListView
        android:id="@+id/listAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Tabs"
        android:weightSum="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        />
</utility.SwipeDetectLayout.SwipeDetectLayout>