<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="coe.com.c0r0vans.MainActivity">

    <HorizontalScrollView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/Tabs"
        android:layout_alignParentBottom="false">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TabsG"
        android:rowCount="1"
        android:columnCount="4">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:id="@+id/playerInfoButton"
            android:textOff="@string/information"
            android:textOn="@string/information"
            android:checked="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upgrades"
            android:id="@+id/upgradeInfoButton"
            android:textOff="@string/upgrades"
            android:textOn="@string/upgrades" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_window"
            android:id="@+id/routeInfoButton"
            android:textOff="@string/route_window"
            android:textOn="@string/route_window" />
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Засады"
            android:id="@+id/ambushInfoButton"
            android:textOff="Засады"
            android:textOn="Засады" />
    </GridLayout>
</HorizontalScrollView>
    <LinearLayout
                    android:id="@+id/informationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Tabs">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="9"
                        android:columnOrderPreserved="true"
                        android:rowOrderPreserved="true" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Уровень"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/levelInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Опыт"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:id="@+id/expInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="До уровня"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19000"
                            android:id="@+id/tnlInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Золото"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:id="@+id/goldInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Караванов"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/caravanInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Засад осталось"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:id="@+id/ambushLeftInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Засад установлено"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/ambushSetInfo"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Самый богатый"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10км"
                            android:id="@+id/mostReachIn"
                            android:layout_gravity="right"
                            android:textSize="20dp"/>

                    </GridLayout>

                </LinearLayout>

    <LinearLayout
        android:id="@+id/upgradeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_below="@+id/Tabs"
        android:layout_alignParentBottom="true">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                android:orientation="vertical"
                android:columnOrderPreserved="true"
                android:id="@+id/upgradeInfo"
                android:rowOrderPreserved="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/up_speed"
                    android:id="@+id/imageView" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="Уровень 1.\nУвеличивает скорость каравана на 1%.   "
                    android:layout_gravity="fill_horizontal|right"
                    android:typeface="normal" />


            </GridLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/routeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_below="@+id/Tabs"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="10"
                android:columnCount="2"
                android:rowOrderPreserved="true"
                android:columnOrderPreserved="true"
                android:id="@+id/routeInfo"
                android:useDefaultMargins="false"
                android:textAlignment="center"
                android:alignmentMode="alignBounds">

            </GridLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ambushLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_below="@+id/Tabs"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="10"
                android:columnCount="2"
                android:rowOrderPreserved="true"
                android:columnOrderPreserved="true"
                android:id="@+id/ambushInfo"
                android:useDefaultMargins="false"
                android:textAlignment="center"
                android:alignmentMode="alignBounds">

            </GridLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
