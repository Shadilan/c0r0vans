<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/layouts"
    android:clickable="true"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonButton"
        android:id="@+id/closeActionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/closebutton"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LargeText"
        android:id="@+id/cityName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/guild_small"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GuildInf"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:layout_alignTop="@+id/imageView"
        style="@style/CommonProgressBar"
        android:progressDrawable="@drawable/guild_progress" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/alliance_small" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AllianceInf"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@id/imageView3"
        android:indeterminate="false"
        android:layout_below="@+id/imageView"
        style="@style/CommonProgressBar"
        android:progressDrawable="@drawable/alliance_progress"
        android:progress="50"
        android:max="100" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/liga_small"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LigaInf"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@id/imageView4"
        android:indeterminate="false"
        android:progress="50"
        android:max="100"
        style="@style/CommonProgressBar"
        android:progressDrawable="@drawable/liga_progress"
        android:layout_below="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:text="Рост города"
        android:id="@+id/textView26"
        android:layout_below="@+id/LigaInf"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="0dp"
        android:layout_margin="0dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityExp"
        android:layout_below="@+id/textView26"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        style="@style/CommonProgressBar"
        android:progressDrawable="@drawable/base_progress"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityExp"
        android:id="@+id/buyPanel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:text="Покупки"
        android:id="@+id/textView28"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="0dp"
        android:layout_margin="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:text="SkillDesc"
        android:id="@+id/skillDesc"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/buyUpgrade"
        android:layout_toLeftOf="@+id/buyUpgrade"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonButton"
        android:id="@+id/buyUpgrade"
        android:src="@mipmap/buy_item"
        android:layout_alignTop="@+id/skillDesc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonButton"
        android:id="@+id/startRoute"

        android:src="@mipmap/start_route"
        android:layout_below="@+id/buyPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonButton"
        android:id="@+id/finishRoute"
        android:src="@mipmap/end_route"
        android:layout_below="@+id/buyPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:text="Влияние фракций"
        android:id="@+id/textView27"
        android:layout_below="@+id/cityName"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:text="Medium Text"
        android:id="@+id/guildInfCount"
        android:layout_alignTop="@+id/GuildInf"
        android:layout_above="@+id/AllianceInf"
        android:layout_alignEnd="@+id/GuildInf"
        android:layout_alignRight="@+id/GuildInf"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:text="Medium Text"
        android:id="@+id/allianceInfCount"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/GuildInf"
        android:layout_alignRight="@+id/GuildInf"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:text="Medium Text"
        android:id="@+id/ligaInfCount"
        android:gravity="center"
        android:layout_alignTop="@+id/LigaInf"
        android:layout_above="@+id/textView26"
        android:layout_alignEnd="@+id/LigaInf"
        android:layout_alignRight="@+id/LigaInf"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@id/imageView4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:id="@+id/distance"
        android:text="111"

        android:layout_below="@+id/startRoute"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart_route"
        style="@style/CommonButton"
        android:background="@drawable/action_button"
        android:src="@mipmap/restart_route"
        android:layout_below="@+id/buyPanel"
        android:layout_toRightOf="@+id/finishRoute"
        android:layout_toEndOf="@+id/finishRoute" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop_route"
        style="@style/CommonButton"
        android:background="@drawable/action_button"
        android:src="@mipmap/drop_route"
        android:layout_below="@+id/buyPanel"
        android:layout_toLeftOf="@+id/finishRoute"
        android:layout_toStartOf="@+id/finishRoute" />


</RelativeLayout>